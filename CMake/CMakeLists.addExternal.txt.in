cmake_minimum_required (VERSION 3.12.4)

project(@_EPA_NAME@-addExp NONE)

if (WIN32)
	### Disable package registry
	set(CMAKE_EXPORT_NO_PACKAGE_REGISTRY ON)
	set(CMAKE_FIND_PACKAGE_NO_PACKAGE_REGISTRY ON)
	set(CMAKE_FIND_PACKAGE_NO_SYSTEM_PACKAGE_REGISTRY ON)

	### Disable environment variables
	set(ENV{CMAKE_PREFIX_PATH} "")
	set(ENV{CMAKE_FRAMEWORK_PATH} "")
	set(ENV{CMAKE_APPBUNDLE_PATH} "")
endif()

include(ExternalProject)

ExternalProject_Add(@_EPA_NAME@
	# DOWNLOAD METHOD
	@_DL_METHOD@

	# SOURCE_DIR		
	@_EPA_SOURCE_DIR@
	# BINARY_DIR		
	@_EPA_BINARY_DIR@
	# INSTALL_DIR 	
	@_EPA_INSTALL_DIR@

	CMAKE_GENERATOR 
		"${CMAKE_GENERATOR}"

	# UPDATE COMMAND   
	@_EPA_UPDATE_COMMAND@

	# PATCH COMMAND   
	@_EPA_PATCH_COMMAND@

	# CONFIGURE_COMMAND   
	@_EPA_CONFIGURE_COMMAND@

	@_EPA_CACHE_ARGS@

	@_EPA_CMAKE_ARGS@

	# UPDATE_COMMAND      
	@_EPA_UPDATE_COMMAND@

	# BUILD_COMMAND       
	@_EPA_BUILD_COMMAND@

	# INSTALL_COMMAND     
	@_EPA_INSTALL_COMMAND@

	# TEST_COMMAND        
	@_EPA_TEST_COMMAND@
    @_EPA_UPDATE_DISCONNECTED@

	@_EPA_ADDITIONAL_ARGS@
)

